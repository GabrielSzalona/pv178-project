<div class="form-group mb-3">
	<label for="name" class="form-label">Name:</label>
	<InputText id="name" class="form-control" @bind-Value="Tournament.Name" />
</div>

<div class="form-group mb-3">
	<label for="sport" class="form-label">Sport:</label>
	<InputText id="sport" class="form-control" @bind-Value="Tournament.Sport" />
</div>

<div class="form-group mb-3">
	<label for="description" class="form-label">Description:</label>
	<InputTextArea id="description" class="form-control" @bind-Value="Tournament.Description" />
</div>

@code {
	[Parameter]
	public Tournament Tournament { get; set; }
}
